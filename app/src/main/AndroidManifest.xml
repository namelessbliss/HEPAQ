<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.essaludapp.hepaq">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application android:name="com.essaludapp.hepaq.common.MyApp"
    android:requestLegacyExternalStorage="true"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher_v2"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_v2"
    android:supportsRtl="true"
    android:theme="@style/Theme.Prototipo"
    android:usesCleartextTraffic="true"
    tools:replace="android:icon">
    <activity android:name="com.essaludapp.hepaq.ui.resultados.tests.TestConocimientoActivity"></activity>
    <activity
        android:name="com.essaludapp.hepaq.ui.acerca.AcercaActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.resultados.tests.TestEstresActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.resultados.tests.TestFantasticoActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.resultados.ImcActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.resultados.ResultadosActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.vacuna.VacunaActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.SplashScreen"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name="com.essaludapp.hepaq.ui.PdfViewerActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.atenciones.AtencionesActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.ProfileActivity"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    <activity
        android:name="com.essaludapp.hepaq.ui.dashboard.DashboardActivity"
        android:screenOrientation="portrait" />
    <activity
        android:name="com.essaludapp.hepaq.ui.LoginActivity"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </activity>

    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts" />
</application>

    </manifest>